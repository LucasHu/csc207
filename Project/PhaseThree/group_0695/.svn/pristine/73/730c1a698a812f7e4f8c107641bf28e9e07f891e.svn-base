<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lucashu.flightsearchproject.AdminEditFlights">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Number_field"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DepartureDate_field"
        android:layout_below="@+id/Number_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Departure Date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ArriveDate_field"
        android:layout_below="@+id/DepartureDate_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Arrive Date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AirLine_field"
        android:layout_below="@+id/ArriveDate_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Airline" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Origin_field"
        android:layout_below="@+id/AirLine_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/AirLine_field"
        android:layout_alignEnd="@+id/AirLine_field"
        android:text="Origin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Destination_field"
        android:layout_below="@+id/Origin_field"
        android:text="Destination" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Price_field"
        android:layout_below="@+id/Destination_field"
        android:layout_alignRight="@+id/Destination_field"
        android:layout_alignEnd="@+id/Destination_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Price" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NumSeats_field"
        android:layout_below="@+id/Price_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Number of Seats" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Flights"
        android:id="@+id/admin_edit_flights_fiekd"
        android:layout_below="@+id/NumSeats_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
