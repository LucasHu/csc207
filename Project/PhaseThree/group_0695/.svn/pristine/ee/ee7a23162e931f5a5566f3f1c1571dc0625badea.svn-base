<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lucashu.flightsearchproject.AdminMainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin major activity"
        android:id="@+id/admin_major_interface"
        android:layout_weight="0.05" />

    <Button
        android:layout_width="fill_parent"
        android:onClick="searchFlights"
        android:layout_height="wrap_content"
        android:text="@string/search_flights"
        android:id="@+id/admin_search_flight_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/admin_major_interface" />

    <Button
        android:layout_width="fill_parent"
        android:onClick="searchItineraries"
        android:layout_height="wrap_content"
        android:text="@string/search_itineraries"
        android:id="@+id/admin_search_itinerary_button"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/admin_search_flight_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="upload"
        android:text="Upload Information"
        android:id="@+id/upload_information_field"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="viewEditClients"
        android:text="View/Edit Clients"
        android:id="@+id/View_edit_client_field"
        android:layout_below="@+id/upload_information_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="editFlights"
        android:text="Edit Flights"
        android:id="@+id/admin_edit_flights_field"
        android:layout_below="@+id/View_edit_client_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

</RelativeLayout>