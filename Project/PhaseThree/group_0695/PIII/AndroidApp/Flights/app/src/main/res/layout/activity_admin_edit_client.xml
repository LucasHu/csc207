<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lucashu.flightsearchproject.AdminEditClientActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_edit_client__lastname_field"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="LastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_edit_client__firstname_field"
        android:layout_below="@+id/admin_edit_client__lastname_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="FirstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_edit_client__address_field"
        android:layout_below="@+id/admin_edit_client__firstname_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_edit_client__creditcardnumber_field"
        android:layout_below="@+id/admin_edit_client__address_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="CreditCardNumber" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_edit_client__expirydate_field"
        android:layout_below="@+id/admin_edit_client__creditcardnumber_field"
        android:text="ExpiryDate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Client"
        android:id="@+id/admin_edit_client_field"
        android:onClick="editClient"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
